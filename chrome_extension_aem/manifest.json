{
  "name": "Adobe Experience Manager extension.",
  "description": "Adobe Experience Manager utilities.",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "js/background.js"
  },
  "options_page": "html/options.html",
  "permissions": [
    "activeTab",
    "clipboardRead",
    "clipboardWrite",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "html/popup.html",
    "default_icon": {
      "176": "assets/png/icon_176.png"
    },
    "default_title": "Adobe Experience Manager extension."
  },
  "icons": {
    "176": "assets/png/icon_176.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+1",
        "mac": "Alt+1"
      },
      "description": "Activate the extension."
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/fonts/segoe_ui_variable.ttf",
        "assets/fonts/segoe_fluent_icons.ttf",
        "assets/fonts/CascadiaCode.ttf",
        "assets/fonts/CascadiaCodeItalic.ttf"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ]
}
